<struts>

    <!--<constant name="struts.action.extension" value="do"/>-->
    <package name="myStrutsDefault" extends="struts-default" abstract="true">
        <interceptors>
            <interceptor name="myTimer" class="com.kaishengit.action.interceptor.MyTimerInterceptor"/>
            <interceptor-stack name="myInterceptor">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="myTimer"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="myInterceptor"/>
    </package>
    
    <package name="home" extends="myStrutsDefault">

        <action name="home" class="com.kaishengit.action.HomeAction" method="home">
            <result name="success" type="dispatcher">
                /WEB-INF/views/home.jsp
            </result>
        </action>
    </package>

    <package name="user" namespace="/user" extends="myStrutsDefault">



